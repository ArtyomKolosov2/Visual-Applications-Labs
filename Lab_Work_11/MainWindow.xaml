<Window x:Class="Lab_Work_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_Work_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" FontSize="34">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Style="{DynamicResource RoundCorner}" Margin="10" Content="Первая форма" Grid.Row="0" Click="Button_Click"/>
        <Button Style="{DynamicResource RoundCorner}" Margin="10" Content="Вторая форма" Grid.Row="1" Click="Button_Click_1"/>
        <Button Style="{DynamicResource RoundCorner}" Margin="10" Content="Третья форма" Grid.Row="2" Click="Button_Click_2"/>
    </Grid>
</Window>
